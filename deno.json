{
  "lock": false,
  "name": "linuxdo-dress-display",
  "version": "1.0.0",
  "description": "Linux.do 女装展示系统 - 基于 Fresh (Deno) 的现代化女装内容聚合展示平台，集成认证系统、帖子采集、管理员审核和精美展示界面。",
  "keywords": [
    "Linux.do",
    "女装展示",
    "Fresh",
    "Deno",
    "Preact",
    "TailwindCSS",
    "Sass",
    "Zustand",
    "TypeScript",
    "OAuth",
    "Content Management",
    "Post Collection",
    "Admin Panel"
  ],
  "author": "h7ml <h7ml@h7ml.com>",
  "license": "MIT",
  "exports": {
    ".": "./main.ts",
    "./components": "./components/index.ts",
    "./hooks": "./hooks/index.ts",
    "./stores": "./stores/index.ts",
    "./utils": "./utils/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/h7ml/linuxdo-dress-display.git"
  },
  "bugs": {
    "url": "https://github.com/h7ml/linuxdo-dress-display/issues"
  },
  "issues": "https://github.com/h7ml/linuxdo-dress-display/issues",
  "homepage": "https://linuxdo-dress.deno.dev",
  "tasks": {
    "check": "deno fmt --check && deno lint && deno check **/*.ts && deno check **/*.tsx",
    "cli": "echo \"import '\\$fresh/src/dev/cli.ts'\" | deno run --unstable -A -",
    "manifest": "deno task cli manifest $(pwd)",
    "start": "deno run -A --watch=static/,routes/ dev.ts",
    "build": "deno run -A dev.ts build",
    "preview": "deno run -A main.ts",
    "update": "deno run -A -r https://fresh.deno.dev/update ."
  },
  "lint": {
    "rules": {
      "tags": [
        "fresh",
        "recommended"
      ]
    }
  },
  "exclude": [
    "**/_fresh/*"
  ],
  "imports": {
    "$fresh/": "https://deno.land/x/fresh@1.7.3/",
    "preact": "https://esm.sh/preact@10.22.0",
    "preact/": "https://esm.sh/preact@10.22.0/",
    "@preact/signals": "https://esm.sh/*@preact/signals@1.2.2",
    "@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.5.1",
    "tailwindcss": "npm:tailwindcss@3.4.1",
    "tailwindcss/": "npm:/tailwindcss@3.4.1/",
    "tailwindcss/plugin": "npm:/tailwindcss@3.4.1/plugin.js",
    "sass": "npm:sass@1.69.5",
    "zustand": "npm:zustand@4.4.7",
    "djwt": "https://deno.land/x/djwt@v3.0.2/mod.ts",
    "sqlite": "https://deno.land/x/sqlite@v3.9.1/mod.ts",
    "$std/": "https://deno.land/std@0.216.0/"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "nodeModulesDir": "auto",
  "deploy": {
    "project": "8b2bd917-4788-43f7-87d4-fff1cd3f7d46",
    "exclude": [
      "**/node_modules"
    ],
    "include": [],
    "entrypoint": "main.ts"
  }
}
